{
  "display_information": {
    "name": "Airut",
    "description": "Sandboxed Claude Code over Slack",
    "background_color": "#1a1a2e"
  },
  "features": {
    "assistant_view": {
      "assistant_description": "Send a message to start a task. Airut runs Claude Code in a sandboxed container and replies with results.",
      "suggested_prompts": []
    },
    "bot_user": {
      "display_name": "Airut",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "assistant:write",
        "chat:write",
        "im:history",
        "users:read",
        "files:read",
        "files:write",
        "usergroups:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "assistant_thread_started",
        "assistant_thread_context_changed",
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": false
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
